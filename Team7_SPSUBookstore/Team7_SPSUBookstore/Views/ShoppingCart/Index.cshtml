@model IEnumerable<Entities.ShoppingCartBook>

@{
    ViewBag.Title = "Index";
    var shoppingCartBooks = (List<Entities.ShoppingCartBook>)ViewData["ShoppingCartBooks"];
}


<h2>Shopping Cart</h2>

<p>
    @Html.ActionLink("Create New", "PreCart")
</p>



@if (shoppingCartBooks != null)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ISBN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantityInCart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
        </tr>

    </table>

    foreach (var book in shoppingCartBooks)
    {
        <table>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => book.ISBN) .jpg
                </td>
                <td>
                    <table>
                        <tr>
                            <td align="center">
                                @Html.DisplayFor(modelItem => book.Price) by author
                            </td>
                        </tr>
                        <tr>
                            <td align="center">
                                @Html.DisplayFor(modelItem => book.TypeInCart)
                            </td>
                        </tr>
                        <tr>
                            <td align="center">
                                @Html.ActionLink("Remove from cart", "RemoveFromCart", new {id = shoppingCartBooks.IndexOf(book)})
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
        <br/>
    }
}
else
{
    <h4>
        Your cart is empty!
    </h4>
}



