@model Entities.Order
@{
    ViewBag.Title = "Enter Billing and Payment Info";
}


<style>
    .field-validation-error {
        color: red;
        font-weight: bold;
    }

    .input-validation-error {
        background: pink;
        border: 1px solid red;
    }
</style>
<div class="container">
    <h2>Shipping Information</h2>

    <div>


        @using (Html.BeginForm("BillingAndPaymentInfo", "Order"))
        {
            @Html.ValidationSummary(true)
            <div class="row">
                <div class="col-md-3 col-lg-3">
                    @Html.TextBoxFor(model => model.ShippingInfo.FirstName, new { @placeholder = "First Name", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ShippingInfo.FirstName)
                </div>
                <div class="col-md-3 col-lg-3">
                    @Html.TextBoxFor(model => model.ShippingInfo.LastName, new { @placeholder = "Last Name", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ShippingInfo.LastName)
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6 col-lg-6">
                    @Html.TextBoxFor(model => model.ShippingInfo.StreetAddr, new { @placeholder = "Street Address", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ShippingInfo.StreetAddr)<br />
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 col-lg-2">
                    @Html.TextBoxFor(model => model.ShippingInfo.City, new { @placeholder = "City", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ShippingInfo.City)
                </div>
                <div class="col-md-2 col-lg-2">
                    @Html.TextBoxFor(model => model.ShippingInfo.State, new { @placeholder = "State", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ShippingInfo.State)
                </div>
                <div class="col-md-2 col-lg-2">
                    @Html.TextBoxFor(model => model.ShippingInfo.ZipCode, new { @placeholder = "Zip Code", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ShippingInfo.ZipCode)
                </div>
            </div>
            <br />
            <div><input type="checkbox" id="isSame" /> Is your shipping info the same as your payment info?</div>
            <h2>Billing Information</h2>
            <div class="row">
                <div class="col-md-3 col-lg-3">
                    @Html.TextBoxFor(model => model.PaymentInfo.FirstName, new { @placeholder = "First Name", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PaymentInfo.FirstName)
                </div>
                <div class="col-md-3 col-lg-3">
                    @Html.TextBoxFor(model => model.PaymentInfo.LastName, new { @placeholder = "Last Name", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PaymentInfo.LastName)<br />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-lg-6">
                    @Html.TextBoxFor(model => model.PaymentInfo.StreetAddr, new { @placeholder = "Street Address", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PaymentInfo.StreetAddr)<br />
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 col-lg-2">
                    @Html.TextBoxFor(model => model.PaymentInfo.City, new { @placeholder = "City", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PaymentInfo.City)
                </div>
                <div class="col-md-2 col-lg-2">
                    @Html.TextBoxFor(model => model.PaymentInfo.State, new { @placeholder = "State", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PaymentInfo.State)
                </div>
                <div class="col-md-2 col-lg-2">
                    @Html.TextBoxFor(model => model.PaymentInfo.ZipCode, new { @placeholder = "Zip Code", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PaymentInfo.ZipCode)
                </div>
            </div>


            <h3>Card Number</h3>
            <div class="row">
                <div class="col-md-4 col-lg-4">
                    @Html.TextBoxFor(model => model.PaymentInfo.CcNumber, new { @placeholder = "Credit Card Number", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PaymentInfo.CcNumber)<br />
                </div>
                <div class="col-md-2 col-lg-2">
                    @Html.TextBoxFor(model => model.PaymentInfo.CCV, new { @placeholder = "Security Code", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PaymentInfo.CCV)<br />
                </div>
            </div>
            <h3>Expiration Date</h3>
            <div class="row">
                <div class="col-md-3 col-lg-3">
                    @Html.TextBoxFor(model => model.PaymentInfo.ExpDateMonth, new { @placeholder = "MM", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PaymentInfo.ExpDateMonth)
                </div>
                <div class="col-md-3 col-lg-3">
                    @Html.TextBoxFor(model => model.PaymentInfo.ExpDateYear, new { @placeholder = "YY", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PaymentInfo.ExpDateYear)
                </div>
            </div>
            <br />

            <a class="btn btn-default" href="/">Cancel</a> <input type="submit"class="btn btn-default"/>
        }




    </div>


</div>
@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    <script type=text/javascript>
        $("#isSame").change(function () {
            $firstName = $("#ShippingInfo_FirstName").val();
            $lastName = $("#ShippingInfo_LastName").val();
            $streetAddr = $("#ShippingInfo_StreetAddr").val();
            $city = $("#ShippingInfo_City").val();
            $state = $("#ShippingInfo_State").val();
            $zipCode = $("#ShippingInfo_ZipCode").val();

            $("#PaymentInfo_FirstName").val($firstName);
            $("#PaymentInfo_LastName").val($lastName);
            $("#PaymentInfo_StreetAddr").val($streetAddr);
            $("#PaymentInfo_City").val($city);
            $("#PaymentInfo_State").val($state);
            $("#PaymentInfo_ZipCode").val($zipCode);
        });
    </script>
}
