@using System
@model Entities.SearchCriteria
@{
    IList<SelectListItem> section = (List<SelectListItem>)ViewData["sections"];
    IList<SelectListItem> semester = (List<SelectListItem>)ViewData["semester"];
    IList<SelectListItem> course = (List<SelectListItem>)ViewData["course"];
    IList<SelectListItem> profs = new List<SelectListItem>();
    profs = (List<SelectListItem>)ViewData["profs"];

}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default">
        <div class="container container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SPSU Bookstore", "Index", "Home", null, new { @class = "navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>

                        <form class="navbar-form">
                            <div class="form-group" style="display:inline;">
                                <div class="input-group">
                                    <input class="form-control" type="text">
                                    <span class="input-group-btn"><button class="btn btn-default" type="submit">Search</button></span>
                                </div>
                            </div>
                        </form>

                        @*<div class="form-group">
                            <input type="text" class="form-control" placeholder="Search">

                            <button type="submit" class="btn btn-default">Search</button>
                        </div>*@
                    </li>
                    <li>
                        <button class="btn btn-default" data-toggle="collapse" data-target="#navSearch">Advanced</button>
                        @*<a href="#"  data-toggle="collapse" data-target="#navSearch">adv</a>*@
                    </li>
                    @*<li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>

        </div>

    </div>
    <div class="collapse col-md-6 col-md-offset-3" id="navSearch">
        @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @role = "form" }))
        {
            <div class="row">
                <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5">
                    @* <div class="control-group">*@
                    <p>Course Criteria</p>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CRN)

                        @Html.TextBoxFor(model => model.CRN, null, new { @class = "form-control", @placeholder = "Enter CRN" })

                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Professor)
                        @Html.DropDownList("Professor", profs, "Please select one", new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Course)
                        @Html.DropDownList("Course", course, "Please select one", new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Section)
                        @Html.DropDownList("Section", section, "Please select one", new { @class = "form-control" })
                    </div>

                    @*<div class="form-group">
                            @Html.LabelFor(model => model.Section)
                            @Html.TextBoxFor(model => model.Section, null, new { @class = "form-control", @placeholder = "Enter Section" })
                        </div>*@

                    @*<div class="form-group">
                            <label class="control-label" for="exampleInputEmail">Email address</label>
                            <input type="email" class="form-control" id="exampleInputEmail" placeholder="Enter email">
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Semester)
                            @Html.TextBoxFor(model => model.Semester, null, new { @class = "form-control", @placeholder = "Enter Semester" })
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox"> Is Book Required For Class?
                                </label>
                            </div>
                        </div>*@
                    @*</div>*@
                </div>

                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 col-md-offset-1">

                    <p>Book Criteria</p>

                    <div class="form-group">
                        <label class="control-label" for="exampleInputEmail">Email address</label>
                        <input type="email" class="form-control" id="exampleInputEmail" placeholder="Enter email">
                    </div>

                </div>
            </div>
            <hr />


        }



    </div>

    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - This is a cool website</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
