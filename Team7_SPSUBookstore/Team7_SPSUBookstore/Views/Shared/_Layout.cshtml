@using System

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default">
        <div class="container container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SPSU Bookstore", "Index", "Home", null, new { @class = "navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (ViewBag.noSearchBar == null || ViewBag.noSearchBar == false)
                    { 
                    <li>
                        <div class="col-md-12 col-lg-12">
                            <form class="navbar-form">
                                <div class="form-group">
                                    <div class="input-group">
                                        <input class="form-control" type="text">
                                        <span class="input-group-btn"><button class="btn btn-default" type="submit">Search</button></span>
                                    </div>
                                </div>
                            </form>
                        </div>

                        @*<div class="form-group">
                            <input type="text" class="form-control" placeholder="Search">

                            <button type="submit" class="btn btn-default">Search</button>
                        </div>*@
                    </li>
                    
                    <li>
                        <a href="#" role="button" data-toggle="collapse" data-target="#navSearch">Advanced</a>

                    </li>}
                    @*<li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>

        </div>

    </div>
    <div class="collapse col-md-6 col-md-offset-3" id="navSearch">
        @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @role = "form" }))
        {
            <div class="row">
                <div class="row">
                        <p>Course Criteria</p>
                </div>
                <div class="row">
                    <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5">
                        @* <div class="control-group">*@



                        <div class="form-group">
                            <label for="Semester">Semester</label>
                            <select name="Semester" id="semstrslct" class="form-control"></select>
                        </div>

                        <div class="form-group">
                            <label for="Course">Course</label>
                            <select name="Course" id="courseslct" class="form-control"></select>
                        </div>


                        <div class="form-group">
                            <label for="Professor">Professor</label>
                            <select name="Professor" id="profslct" class="form-control"></select>
                        </div>

                        <div class="form-group">
                            <label for="Section">Section</label>
                            <select name="Section" id="sectslct" class="form-control"></select>
                        </div>
                        <button onclick="clearSelects()" type="button" class="btn btn-success"><span class="fa fa-remove"></span> Clear Selections</button>
                    </div>

                    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 col-md-offset-1">

                        <p></p>

                        <div class="form-group">
                            <label class="control-label" for="exampleInputEmail">CRN</label>
                            <input type="email" class="form-control" id="exampleInputEmail" name="CRN" placeholder="Enter CRN">
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox"> Show Only Required Books?
                                </label>
                            </div>
                        </div>

                    </div>
                </div>
                    </div>
            <hr />


        }



    </div>

    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - This is a cool website</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
